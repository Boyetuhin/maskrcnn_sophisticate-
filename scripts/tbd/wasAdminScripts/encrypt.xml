<project name="Encrypt" default="encryp" basedir=".">
<property file="ant.ncs.properties"/>
<property file="${ncsHome}/properties/propfile.env" />
<taskdef name="enctask" classname="com.tcs.ncs.security.crypto.ChangeKeystore" classpath="keystore.jar" />
<taskdef name="dbURLTask" classname="com.tcs.incremental.DBStringTask" classpath="installUtility.jar"/>
<target name="encryp">
<dbURLTask dbAddressString="${dbAddressString}" dbName="${dbName}" dbType="${dbType}"/>
<delete dir="new" />
<delete dir="old" />
<mkdir dir="new" />
<mkdir dir="old" />

<enctask connectionstring="${jdbcURLProperty}" drivername="${MasterCraft.JDBCDriver}" userid="${dbOnlineUserId}" password="${dbOnlinePassword}" scheme="${ENCRYPTIONSCHEME}"  key="${ENCRYPTIONKEY}" basedir="${basedir}" classpath="${dbDriverJarPath}/ojdbc14.jar" />

<delete dir="new" />
<delete dir="old" />
</target>
</project>
